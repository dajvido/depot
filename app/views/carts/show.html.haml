- if notice
  %p#notice= notice

%h2 Your Cart
%table
  - @cart.line_items.each do |item|
    %tr 
      %td
        = item.quantity
        &times;
      %td= item.product.title
      %td.item_price= number_to_currency(item.total_price, unit: "zł", format: "%n %u")
  %tr.total_line
    %td{ colspan: 2 } Total
    %td.total_cell= number_to_currency(@cart.total_price, unit: "zł", format: "%n %u")
= button_to 'Empty cart', @cart, method: :delete,
  data: { configrm: 'Are you sure?' }
